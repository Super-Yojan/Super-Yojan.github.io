---
// src/layouts/BaseLayout.astro
const { title } = Astro.props;
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Yojan</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;500;600&family=JetBrains+Mono:wght@400&display=swap" rel="stylesheet">
</head>
<body>

    <div class="blueprint-grid"></div>
    <div class="vignette"></div>

    <nav class="top-nav">
        <a href="/" class="nav-logo">SYSTEM_ROOT</a>
        <div class="nav-links">
            <a href="/projects">PROJECTS</a>
            <a href="/blog">BLOG</a>
            <a href="/about">ABOUT</a>
        </div>
        <button id="theme-toggle" class="theme-btn" aria-label="Toggle Theme">
            <span class="sun-icon">☀</span>
            <span class="moon-icon">☾</span>
        </button>
    </nav>

    <main>
        <slot />
    </main>

    <script>
        const toggleBtn = document.getElementById('theme-toggle');
        const body = document.body;

        // Load saved theme
        if (localStorage.getItem('theme') === 'light') {
            body.classList.add('light-mode');
        }

        toggleBtn.addEventListener('click', () => {
            body.classList.toggle('light-mode');
            localStorage.setItem('theme', body.classList.contains('light-mode') ? 'light' : 'dark');
        });
    </script>

</body>
</html>

<style is:global>
    /* GLOBAL CSS VARIABLES (Same as Home) */
    :root {
        --bg: #0f1115;
        --text: #e0e0e0;
        --accent: #00e5ff;
        --grid-color: rgba(255, 255, 255, 0.05);
        --border: rgba(255,255,255,0.1);
        --mono-bg: rgba(255,255,255,0.05);
        --font-main: 'Inter', sans-serif;
        --font-code: 'JetBrains Mono', monospace;
    }

    body.light-mode {
        --bg: #f4f4f4;
        --text: #111111;
        --accent: #ff3300;
        --grid-color: rgba(0, 0, 0, 0.05);
        --border: rgba(0,0,0,0.1);
        --mono-bg: rgba(0,0,0,0.05);
    }

    body {
        margin: 0;
        background-color: var(--bg);
        color: var(--text);
        font-family: var(--font-main);
        min-height: 100vh;
        transition: background 0.3s ease, color 0.3s ease;
    }

    /* BACKGROUNDS */
    .blueprint-grid {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background-image: linear-gradient(var(--grid-color) 1px, transparent 1px), linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
        background-size: 40px 40px;
        z-index: -1;
    }
    .vignette {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: radial-gradient(circle, transparent 40%, var(--bg) 100%);
        z-index: -1;
    }

    /* NAVIGATION */
    .top-nav {
        display: flex; justify-content: space-between; align-items: center;
        padding: 1.5rem 2rem;
        font-family: var(--font-code); font-size: 0.8rem;
    }
    .nav-logo { font-weight: bold; color: var(--accent); text-decoration: none; }
    .nav-links { display: flex; gap: 2rem; }
    .nav-links a { text-decoration: none; color: var(--text); opacity: 0.7; transition: opacity 0.2s; }
    .nav-links a:hover { opacity: 1; color: var(--accent); }

    /* TOGGLE BTN */
    .theme-btn {
        background: transparent; border: 1px solid var(--border);
        color: var(--text); padding: 0.4rem; cursor: pointer;
        border-radius: 50%; width: 32px; height: 32px;
        display: flex; align-items: center; justify-content: center;
    }
    .sun-icon { display: none; }
    body.light-mode .sun-icon { display: block; }
    body.light-mode .moon-icon { display: none; }

    /* UTILITIES */
    .mono { font-family: var(--font-code); color: var(--accent); }
</style>
