---
// src/pages/projects.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: "Autonomous Blimp Framework",
    id: "PRJ-001",
    status: "Active",
    tags: ["Rust", "Zenoh", "Robotics"],
    desc: "A lightweight control framework for indoor autonomous blimps using the Zenoh protocol for low-latency communication. Replaces ROS2 for embedded constraints.",
    link: "https://github.com/yourusername/blimp"
  },
  {
    title: "Nepalese Instrument Sampler",
    id: "PRJ-002",
    status: "Beta",
    tags: ["C++", "JUCE", "DSP"],
    desc: "VST3/AU Audio plugin preserving traditional Nepali sounds. Features spectral modelling of the Sarangi and Madal instruments.",
    link: "#"
  },
  {
    title: "Thrust Measurement Stand",
    id: "HW-04",
    status: "Completed",
    tags: ["Arduino", "Hardware", "C"],
    desc: "Custom test rig using HX711 load cells to characterize micro-motor performance data for blimp propulsion optimization.",
    link: "#"
  },
  {
    title: "Dotfiles & Emacs Config",
    id: "SYS-09",
    status: "Maintenance",
    tags: ["Lisp", "Nix", "Linux"],
    desc: "My personal development environment. Heavily customized Evil-mode Emacs with LSP bridge for Rust and Python.",
    link: "#"
  }
];
---

<BaseLayout title="Engineering Logs">
    <div class="archive-container">
        
        <header class="page-header">
            <h1>Engineering <span class="highlight">Logs</span></h1>
            <p class="subtitle">System Design / Hardware / Audio</p>
        </header>

        <div class="grid">
            {projects.map((project, index) => (
                <a href={project.link} class="card fade-in" style={`animation-delay: ${index * 0.1}s`}>
                    <div class="card-header">
                        <span class="project-id">{project.id}</span>
                        <span class={`status-badge ${project.status.toLowerCase()}`}>{project.status}</span>
                    </div>
                    
                    <h3>{project.title}</h3>
                    <p>{project.desc}</p>
                    
                    <div class="tags">
                        {project.tags.map(tag => (
                            <span class="tag">#{tag}</span>
                        ))}
                    </div>
                    
                    <div class="card-footer">
                        <span class="link-arrow">ACCESS_REPO -></span>
                    </div>
                </a>
            ))}
        </div>

    </div>
</BaseLayout>

<style>
    .archive-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 4rem 2rem;
    }

    .page-header {
        margin-bottom: 4rem;
        border-bottom: 1px solid var(--border);
        padding-bottom: 2rem;
    }

    h1 {
        font-size: 3rem;
        font-weight: 300;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: -1px;
    }

    .highlight {
        font-weight: 700;
        color: var(--accent);
    }

    .subtitle {
        font-family: var(--font-code);
        color: var(--text);
        opacity: 0.6;
        margin-top: 0.5rem;
    }

    /* GRID LAYOUT */
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    /* CARD STYLES */
    .card {
        display: flex;
        flex-direction: column;
        background: rgba(255,255,255,0.02);
        border: 1px solid var(--border);
        padding: 1.5rem;
        text-decoration: none;
        color: var(--text);
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
    }

    .card:hover {
        background: var(--mono-bg);
        border-color: var(--accent);
        transform: translateY(-2px);
    }

    /* Card Header */
    .card-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        font-family: var(--font-code);
        font-size: 0.75rem;
    }

    .project-id { opacity: 0.5; }

    .status-badge {
        padding: 2px 6px;
        border: 1px solid var(--border);
        border-radius: 4px;
        text-transform: uppercase;
        font-size: 0.65rem;
    }
    .status-badge.active { color: #00ff41; border-color: #00ff41; }
    .status-badge.beta { color: #ffcc00; border-color: #ffcc00; }
    .status-badge.completed { color: var(--accent); border-color: var(--accent); }

    h3 {
        font-size: 1.25rem;
        margin: 0 0 0.5rem 0;
        font-weight: 600;
        letter-spacing: -0.02em;
    }

    p {
        font-size: 0.9rem;
        opacity: 0.8;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex-grow: 1; /* Pushes footer down */
    }

    /* Tags */
    .tags { display: flex; gap: 0.5rem; flex-wrap: wrap; margin-bottom: 1.5rem; }
    .tag {
        font-family: var(--font-code);
        font-size: 0.75rem;
        color: var(--accent);
        opacity: 0.8;
    }

    /* Footer */
    .card-footer {
        font-family: var(--font-code);
        font-size: 0.8rem;
        text-align: right;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.2s;
    }
    .card:hover .card-footer { opacity: 1; transform: translateX(0); }
    .link-arrow { color: var(--accent); }

    /* Animations */
    .fade-in {
        opacity: 0;
        animation: fadeIn 0.5s ease forwards;
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
